{
    "name": "com-backend",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "start": "node dist/index.js",
        "test": "jest --coverage",
        "dev": "npm run build && concurrently -k -p \"[{name}]\" -n \"Typescript,Node\" -c \"green.bold,cyan.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
        "build": "rimraf dist && tsc",
        "watch-ts": "tsc -w",
        "watch-node": "nodemon dist/index.js --inspect",
        "lint": "tsc --noEmit && eslint src/**/*.ts"
    },
    "devDependencies": {
        "@types/dotenv": "^6.1.1",
        "@types/express": "^4.17.0",
        "@types/jest": "^24.0.16",
        "@types/node": "^12.6.9",
        "@typescript-eslint/eslint-plugin": "^1.13.0",
        "@typescript-eslint/parser": "^1.13.0",
        "concurrently": "^4.1.1",
        "eslint": "^6.1.0",
        "eslint-config-prettier": "^6.0.0",
        "eslint-plugin-jest": "^22.14.1",
        "eslint-plugin-prettier": "^3.1.0",
        "husky": "^3.0.2",
        "jest": "^24.8.0",
        "lint-staged": "^9.2.1",
        "nodemon": "^1.19.1",
        "post-npm-install": "^1.0.0",
        "prettier": "^1.18.2",
        "pretty-quick": "^1.11.1",
        "rimraf": "^2.6.3",
        "ts-jest": "^24.0.2",
        "typescript": "^3.5.3"
    },
    "dependencies": {
        "dotenv": "^8.0.0",
        "express": "^4.17.1"
    },
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged --verbose && lint-staged",
            "post-merge": "post-npm-install"
        }
    },
    "lint-staged": {
        "src/**/*.{js,ts}": "eslint"
    }
}
